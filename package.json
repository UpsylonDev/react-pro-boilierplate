{
  "name": "todoapp-pro",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Application de gestion de t√¢ches professionnelle",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.1.1",
    "react-i18next": "^15.3.1",
    "i18next": "^25.4.1",
    "framer-motion": "^12.0.2",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.469.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.23.1",
    "@typescript-eslint/parser": "^8.23.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "typescript": "^5.7.5",
    "vitest": "^3.0.0",
    "jsdom": "^25.0.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/user-event": "^14.5.2",
    "@storybook/addon-essentials": "^8.4.9",
    "@storybook/addon-interactions": "^8.4.9",
    "@storybook/addon-links": "^8.4.9",
    "@storybook/blocks": "^8.4.9",
    "@storybook/react": "^8.4.9",
    "@storybook/react-vite": "^8.4.9",
    "@storybook/test": "^8.4.9",
    "storybook": "^8.4.9",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.3",
    "vite-bundle-analyzer": "^0.18.0",
    "workbox-window": "^7.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  }
}
